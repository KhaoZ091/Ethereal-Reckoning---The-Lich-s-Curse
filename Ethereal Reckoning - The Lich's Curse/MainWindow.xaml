<Window x:Class="GridExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid Example" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row 1 -->
        <Button Grid.Row="0" Grid.Column="0" Content="Stats:" />
        <Button Grid.Row="0" Grid.Column="1" Content="Narration" Grid.RowSpan="2" />
        <Button Grid.Row="0" Grid.Column="2" Content="Map" />

        <!-- Row 2 -->
        <Button Grid.Row="1" Grid.Column="0" Content="Character:" />
        <Button Grid.Row="1" Grid.Column="2" Content="Entity:" />

        <!-- Row 3 -->
        <Button Grid.Row="2" Grid.Column="0" Content="Equipment:" />
        <Button Grid.Row="2" Grid.Column="1" Content="Command:" />
        <Button Grid.Row="2" Grid.Column="2" Content="Navigation" />
    </Grid>
    
</Window>