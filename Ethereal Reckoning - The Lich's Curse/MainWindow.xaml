<Window x:Class="GridExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://shemas.openxmlformats.org/markup-compatibility/2006"
        Title="Ethereal Reckoning: The Lich's Curse" Height="768" Width="1024">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,1,-100,-57">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.657"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="524" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>

        <!-- Area of Player Info -->
        <Grid Grid.Row="1" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="#434b55" BorderThickness="1">
                <Label Grid.Row="0" Grid.Column="0" Content="Character Statistics:" Background="#2d333b" Foreground="White"/>
            </Border>
            <Grid Grid.Row="0" Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="125"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="1" Background="#22272e" Foreground="White" />
                <Label Grid.Row="2" Content="Hitpoints:" Background="#22272e" Foreground="White" />
                <Label Grid.Row="3" Content="Atack Damage:" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="4" Content="Magic Damage:" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="5" Content="Defense:" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="6" Content="Magic Resistance:" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="7" Content="Speed:" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="8" Content="Mana:" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="9" Background="#22272e" Foreground="White" />

                <Label Grid.Row="1" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="2" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="3" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="4" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="5" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="6" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="7" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="8" Grid.Column="1" Background="#22272e" Foreground="White"/>
                <Label Grid.Row="9" Grid.Column="1" Background="#22272e" Foreground="White"/>

            </Grid>
            <Label Grid.Row="1" Grid.Column="0" Content="Character Image:" Background="#2d333b" Foreground="White"/>
            <Grid Grid.Row="1" Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Grid.Column="1" Background="#22272e" Foreground="White"/>

            </Grid>
        </Grid>

        <Label Grid.Row="0" Grid.Column="0" Content="Menu" Grid.ColumnSpan="3"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Character Equipments"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Narration"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Commands:"/>
        <Grid Grid.Row="1" Grid.Column="2">
            <Label Grid.Row="1" Grid.Column="2" Content="Map"/>
        </Grid>
        <Label Grid.Row="2" Grid.Column="2" Content="Navigation"/>
    </Grid>

</Window>
